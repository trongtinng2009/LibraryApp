<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/pink_bg"
    tools:context=".Fragment.GuestLibCardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:visibility="gone"
        android:id="@+id/fragguestlib_havelibcard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_margin="10dp"
            android:id="@+id/fragguestlib_nof"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/transparent"
            android:src="@drawable/notifications"
            android:layout_width="32dp"
            android:layout_height="32dp"/>
        <RelativeLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/pas_pink"
            android:background="@drawable/book_bg"
            android:id="@+id/fragguestlib_libcard"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/fragguestlib_nof"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/high_pink"
                android:id="@+id/fragguestlib_libcardtitle"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/poppinsbold"
                android:textSize="25sp"
                android:text="Library Card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RelativeLayout
                android:layout_margin="10dp"
                android:layout_below="@id/fragguestlib_libcardtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_alignTop="@id/fragguestlib_libcardinfo"
                android:layout_alignBottom="@id/fragguestlib_libcardinfo"
                android:id="@+id/fragguestlib_libcardimg"
                app:riv_border_width="1dp"
                app:riv_border_color="@color/pas_cream"
                android:scaleType="centerCrop"
                android:src="@drawable/seraavt2"
                android:layout_width="130dp"
                android:layout_height="0dp"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:id="@+id/fragguestlib_libcardinfo"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/fragguestlib_libcardimg"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:background="@color/low_pink"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/high_pink"
                android:id="@+id/fragguestlib_libcardfirstname"
                android:fontFamily="@font/linotteregular"
                android:textSize="20sp"
                android:text="Họ : Dotwav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/high_pink"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/fragguestlib_libcardlastname"
                    android:fontFamily="@font/linotteregular"
                    android:textSize="20sp"
                    android:text="Tên : Seraphine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                    </LinearLayout>
                <TextView
                    android:textColor="@color/high_pink"
                    android:background="@color/low_pink"
                    android:layout_marginTop="10dp"
                    android:id="@+id/fragguestlib_libcardaddress"
                    android:fontFamily="@font/linotteregular"
                    android:textSize="20sp"
                    android:text="Địa chỉ : Los Angeles, California, Hoa Kỳ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/high_pink"
                    android:background="@color/low_pink"
                    android:layout_marginTop="10dp"
                    android:id="@+id/fragguestlib_libcarddob"
                    android:fontFamily="@font/linotteregular"
                    android:textSize="20sp"
                    android:text="Ngày sinh : 29/10/2000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/high_pink"
                    android:background="@color/low_pink"
                    android:layout_marginTop="10dp"
                    android:id="@+id/fragguestlib_libcardexd"
                    android:fontFamily="@font/linotteregular"
                    android:textSize="20sp"
                    android:text="Có giá trị đến : 18/10/2027"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/high_pink"
                    android:background="@color/low_pink"
                    android:layout_marginTop="10dp"
                    android:id="@+id/fragguestlib_libcardid"
                    android:fontFamily="@font/linotteregular"
                    android:textSize="20sp"
                    android:text="Mã thẻ : LIB11222"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/fragguestlib_txtborrow"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/fragguestlib_libcard"
            android:fontFamily="@font/linottebold"
            android:textSize="22sp"
            android:text="Sách đang mượn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/medium_blue"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="@id/fragguestlib_txtborrow"
            app:layout_constraintBottom_toBottomOf="@id/fragguestlib_txtborrow"
            android:fontFamily="@font/linottebold"
            android:textSize="18sp"
            android:text="Xem thêm >"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/fragguestlib_txtborrow"
            android:id="@+id/fragguestlib_rcvborrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/fragguestlib_txtborrowed"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/fragguestlib_rcvborrow"
            android:fontFamily="@font/linottebold"
            android:textSize="22sp"
            android:text="Sách đã mượn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/medium_blue"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="@id/fragguestlib_txtborrowed"
            app:layout_constraintBottom_toBottomOf="@id/fragguestlib_txtborrowed"
            android:fontFamily="@font/linottebold"
            android:textSize="18sp"
            android:text="Xem thêm >"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/fragguestlib_txtborrowed"
            android:id="@+id/fragguestlib_rcvborrowed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragguestlib_nothavelibcard"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <TextView
           android:id="@+id/fragguestlib_title"
           android:layout_marginTop="20dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintBottom_toTopOf="@id/fragguestlib_info"
           android:gravity="center"
           android:fontFamily="@font/poppinsbold"
           android:textSize="25sp"
           android:text="Library Card Register"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragguestlib_info"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/fragguestlib_nameedt"

            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:fontFamily="@font/linotteregular"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:padding="12dp"
                android:hint="Họ"
                android:background="@drawable/edittext_round"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:fontFamily="@font/linotteregular"
                android:textSize="20sp"
                android:layout_margin="10dp"
                android:padding="12dp"
                android:hint="Tên"
                android:background="@drawable/edittext_round"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <EditText
            android:id="@+id/fragguestlib_address"
            app:layout_constraintTop_toBottomOf="@id/fragguestlib_nameedt"
            app:layout_constraintRight_toRightOf="@id/fragguestlib_nameedt"
            app:layout_constraintLeft_toLeftOf="@id/fragguestlib_nameedt"
            android:fontFamily="@font/linotteregular"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="12dp"
            android:hint="Địa chỉ"
            android:background="@drawable/edittext_round"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/fragguestlib_phone"
            app:layout_constraintTop_toBottomOf="@id/fragguestlib_address"
            app:layout_constraintRight_toRightOf="@id/fragguestlib_nameedt"
            app:layout_constraintLeft_toLeftOf="@id/fragguestlib_nameedt"
            android:fontFamily="@font/linotteregular"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="12dp"
            android:hint="Số điện thoại"
            android:background="@drawable/edittext_round"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:id="@+id/fragguestlib_dob"
            app:layout_constraintTop_toBottomOf="@id/fragguestlib_phone"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:fontFamily="@font/linotteregular"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:padding="12dp"
                android:hint="Ngày sinh"
                android:background="@drawable/edittext_round"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:fontFamily="@font/linotteregular"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:padding="12dp"
                android:hint="Tháng sinh"
                android:background="@drawable/edittext_round"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:fontFamily="@font/linotteregular"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:padding="12dp"
                android:hint="Năm sinh"
                android:background="@drawable/edittext_round"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragguestlib_regbtn"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="Đăng ký"
            android:backgroundTint="@color/medium_blue"
            android:background="@drawable/round_btn"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintRight_toRightOf="@id/fragguestlib_nameedt"
            app:layout_constraintLeft_toLeftOf="@id/fragguestlib_nameedt"
            app:layout_constraintTop_toBottomOf="@id/fragguestlib_dob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>