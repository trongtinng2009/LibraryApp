<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/pas_cream"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.GuestBookDetailFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:paddingBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:alpha="0.2"
        android:id="@+id/fragguestbookdetail_bgimg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/seraavt2" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/fragguestbookdetail_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintTop_toTopOf="parent">
            <ImageButton
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@color/transparent"
                android:src="@drawable/arrow_back" />
            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/poppinsbold"
                android:text="Book detail" />
        </RelativeLayout>
        <FrameLayout
            android:id="@+id/fragguestbookdetail_maincontent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/fragguestbookdetail_topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
             <LinearLayout
                 android:elevation="20dp"
                 android:paddingLeft="30dp"
                 android:paddingRight="30dp"
                 android:paddingTop="30dp"
                 android:layout_marginTop="260dp"
                 android:layout_gravity="bottom"
                 android:background="@color/pas_cream"
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content">
                 <LinearLayout
                     android:orientation="horizontal"
                     android:weightSum="3"
                     android:layout_width="match_parent"
                     android:layout_height="50dp">
                     <TextView
                         android:elevation="10dp"
                         android:layout_marginRight="10dp"
                         android:backgroundTint="@color/pas_redbrown"
                         android:background="@drawable/round_btn"
                         android:gravity="center"
                         android:fontFamily="@font/linottebold"
                         android:textSize="18sp"
                         android:text="Overview"
                         android:layout_weight="1"
                         android:layout_width="0dp"
                         android:layout_height="match_parent"/>
                     <TextView
                         android:backgroundTint="@color/pas_redbrown"
                         android:elevation="10dp"
                         android:layout_marginRight="10dp"
                         android:background="@drawable/round_btn"
                         android:gravity="center"
                         android:fontFamily="@font/linottebold"
                         android:textSize="18sp"
                         android:text="Detail"
                         android:layout_weight="1"
                         android:layout_width="0dp"
                         android:layout_height="match_parent"/>
                     <TextView
                         android:backgroundTint="@color/pas_redbrown"
                         android:elevation="10dp"
                         android:background="@drawable/round_btn"
                         android:gravity="center"
                         android:fontFamily="@font/linottebold"
                         android:textSize="18sp"
                         android:text="Comment"
                         android:layout_weight="1"
                         android:layout_width="0dp"
                         android:layout_height="match_parent"/>
                 </LinearLayout>

                 <TextView
                     android:id="@+id/fragguestbookdetail_summarytxt"
                     android:layout_marginTop="10dp"
                     android:fontFamily="@font/linotteregular"
                     android:textSize="17sp"
                     android:text="Sau khi linh khí hồi phục, mọi người chắt chiu từng tơ linh khí, chỉ có Lữ Thụ, dựa vào hệ thống điểm cảm xúc tiêu cực , oán hận người khác là trở nên mạnh hơn! Cậu ta chỉ muốn bảo vệ em gái, nhưng mà thời kì lũ lụt khó có thể tránh khỏi, chỉ đành..... tiện oán hận người khác , trở nên mạnh hơn! Vậy thì ,
                     chuẩn bị xong chưa, Lữ Thụ tới đây"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>
                 <LinearLayout
                     android:layout_marginTop="10dp"
                     android:weightSum="3"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">
                     <LinearLayout
                         android:orientation="vertical"
                         android:layout_weight="1"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content">
                         <TextView
                             android:gravity="center"
                             android:textSize="18sp"
                             android:fontFamily="@font/linottebold"
                             android:text="Rating"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"/>
                         <TextView
                             android:gravity="center"
                             android:fontFamily="@font/linotteregular"
                             android:textSize="17sp"
                             android:text="4.8"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"/>
                     </LinearLayout>
                     <LinearLayout
                         android:orientation="vertical"
                         android:layout_weight="1"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content">
                         <TextView
                             android:gravity="center"
                             android:textSize="18sp"
                             android:fontFamily="@font/linottebold"
                             android:text="Quantity"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"/>
                         <TextView
                             android:id="@+id/fragguestbookdetail_remainquantity"
                             android:gravity="center"
                             android:fontFamily="@font/linotteregular"
                             android:textSize="17sp"
                             android:text="200"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"/>
                     </LinearLayout>
                     <LinearLayout
                         android:orientation="vertical"
                         android:layout_weight="1"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content">
                         <TextView
                             android:gravity="center"
                             android:textSize="18sp"
                             android:fontFamily="@font/linottebold"
                             android:text="Views"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"/>
                         <TextView
                             android:gravity="center"
                             android:fontFamily="@font/linotteregular"
                             android:textSize="17sp"
                             android:text="10000"
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"/>
                     </LinearLayout>
                 </LinearLayout>
             </LinearLayout>
                <LinearLayout
                    android:elevation="20dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/fragguestbookdetail_booktitle"
                            android:textSize="20sp"
                            android:fontFamily="@font/poppinsbold"
                            android:text="Bạn Học Tôi Là Lính Đánh Thuê"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textSize="17sp"
                            android:fontFamily="@font/poppinsregular"
                            android:text="Tác giả : Đang cập nhật"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/fragguestbookdetail_bookimg"
                    android:layout_weight="1"
                    app:riv_corner_radius="20dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/seraavt2"
                    android:layout_width="0dp"
                    android:layout_height="280dp"/>
                </LinearLayout>
            </FrameLayout>
        </FrameLayout>
        <LinearLayout
            android:background="@color/pas_cream"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/fragguestbookdetail_maincontent"
            android:layout_gravity="bottom"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <ImageButton
                android:background="@drawable/round_heartbtn_in_detailbook"
                android:src="@drawable/heart_plus"
                android:layout_weight="1"
                app:tint="@color/white"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <TextView
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/round_borrowbtn_in_detailbook"
                android:fontFamily="@font/linottebold"
                android:textSize="20sp"
                android:text="Borrow now"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
    </ScrollView>
</FrameLayout>